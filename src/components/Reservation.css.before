.reserve-btn {
  color: #fff;       
  background-color: red;      
  padding: 1.5rem;
  margin: 1rem;  
  font-size: 1.5rem;     
  font-family: 'NapjakBlock';           
  border: none;
  border-radius: 1rem;
  box-shadow: 0 0.2rem 0 0 rgb(169, 2, 2);
  cursor: pointer; 
  transition: background-color 0.3s, transform 0.1s, box-shadow 0.3s;

}


.reserve-btn:hover {
  transform: translateY(0.2rem);
  box-shadow: 0px 0px 0px 0px rgb(224, 1, 1);

}


.reserve-btn:active {
  background-color: rgb(223, 1, 1);     
  box-shadow: 0 3px 4px rgba(0, 0, 0, 0.1);  /
}